<div>
  <div>
    <h1>
      Photo #<%= @the_photo.id %> details
    </h1>

    <div>
      <div>
        <a href="/photos">
          Go back
        </a>
      </div>

      <div>
        <%if @the_photo.owner.username == current_user.username%>
        <a href="/delete_photo/<%= @the_photo.id %>">
          Delete this photo
        </a>
        <%end%>
      </div>
    </div>


    <dl>
      <dt>
        Image
      </dt>
      <dd>
        <img src="<%= @the_photo.image %>" alt="Description of Image" />
        <%= @the_photo.image %> 
      </dd>

      <dt>
        Caption
      </dt>
      <dd>
        <%= @the_photo.caption %>
      </dd>

      <dt>
        Owner
      </dt>
      <dd>
        <%= @the_photo.owner.username %>
      </dd>

      <dt>
        Likes count
      </dt>
      <dd>
        <%= @the_photo.likes_count %>
      </dd>

      <dt>
        Comments count
      </dt>
      <dd>
        <%= @the_photo.comments_count %>
      </dd>

      <dt>
        Fans
      </dt>
      <dd>
        <ul>
          <% @the_photo.likes.each do |like| %>
            <li>
              <%= like.fan.username %> - liked at <%= like.created_at.strftime("%B %d, %Y %H:%M") %>
            </li>
          <% end %>
        </ul>

        <dt>Add a fan</dt>
          <dd>

            <form action="/insert_like" method="post">
              <input type="hidden" name="photo_id" value="729">
              <input type="hidden" name="fan_id" value="<%= current_user.id %>">
              <button type="submit">Like</button>
            </form>
      </dd>
            <!--<% if user_signed_in? %>
              <form action="/modify_like" method="post">
                <button>
                  like
                </button>
              </form>
            <% end %>-->

      </dd>

      <dt>
        Created at
      </dt>
      <dd>
        <%= time_ago_in_words(@the_photo.created_at) %> ago
      </dd>

      <dt>
        Updated at
      </dt>
      <dd>
        <%= time_ago_in_words(@the_photo.updated_at) %> ago
      </dd>
    </dl>
  </div>
</div>

<hr>

<h2>Comments:</h2>
<table>
  <thead>
    <tr>
      <th>Username</th>
      <th>Comment</th>
      <th>Time</th>
      <th>Actions</th>
    </tr>
  </thead>
  <tbody>
    <% @the_photo.comments.each do |comment| %>
      <tr>
        <td><%= comment.user.username %></td>
        <td><%= comment.body %></td>
        <td><%= comment.created_at.strftime("%B %d, %Y %H:%M") %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<h3>Add a new comment:</h3>


<div>
  <div>
    <h2>
      Edit photo
    </h2>

    <form action="/modify_photo/<%= @the_photo.id %>"  method="post" >
      <button>
        Update photo
      </button>
    </form>
  </div>
</div>

<hr>
