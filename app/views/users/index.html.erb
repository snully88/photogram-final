<div>
  <div>
    <h1>
      List of all users
    </h1>
  </div>
</div>

<hr>


<hr>
<div>
  <div>
    <table border="1">
      <tr>
        <th>
          Username
        </th>

        <th>
          Private?
        </th>
        <% if current_user.present? %>
          <th>
          Follow/Unfollow
          <th>
        <%end%>


        <th>
        </th>
      </tr>

      <% @list_of_users.each do |a_user| %>
      <tr>
        <td>
          <%= a_user.username %>
        </td>

        <td>
          <%= a_user.private ? 'Yes' : 'No' %>
        </td>

        <% if current_user.present? %>
          <td>
          Follow/Unfollow
          <td>
        <%end%>
      
        <td>
          <a href="/users/<%= a_user.id %>">
            Show details
          </a>
        </td>

      </tr>
      <% end %>
    </table>
  </div>
</div>

<hr>
